<div class="new">
  <%= form_with scope: :device, url: devices_path, local: true do |form| %>
  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th>
          <%= form.label :name %>
        </th>
        <th>
          <%= form.label :address %>
        </th>
        <th>
      </tr>
    </thead>
    <tr>
      <th>
        <%= form.text_field :name %>
      </th>
      <th>
        <%= form.number_field :address %><br>
      </th>
      <th>
        <%= form.submit %>
      </th>
    </tr>
    <% end %>
  </table>
<center>
  <%= link_to 'Back', devices_path, class:"btn btn-outline-primary" %>
</center>
</div>
