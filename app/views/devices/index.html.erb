<center>
<div id="general">

<h1>Devices</h1>
<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>UUID</th>
  </tr>
  <% @device.each do |device| %>
    <tr>
      <td class="tabla" id="tabla_name"><%= device.name %></td>
      <td class="tabla" id="tabla_address"><%= device.address %></td>
      <td class="tabla" id="tabla_uuid"><%= device.segunda_id %></td>

      <td><%= link_to 'Show', device_path(device), :class => "link menu" %></td>
    </tr>
  <% end %>
</table>
<br>
<%= link_to 'New Device', new_device_path, :class => "link link_new"%><br>
<br>
</div>
<br>
</center>
