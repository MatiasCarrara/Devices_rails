<%= form_with(model: @device) do |form| %>
<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th><%= form.label :name %></th>
      <th><%= form.label :address %></th>
      <th></th>
    </tr>
  </thead>
  <tr>
    <th>
      <%= form.text_field :name %>
    </th>
    <th>
      <%= form.text_field :address %>
    </th>
    <th>
      <%= form.submit %>
    </th>
  </tr>
</table>
<% end %>
<center>
<%= link_to 'Back', devices_path, class:"btn btn-outline-primary" %>
</center>
